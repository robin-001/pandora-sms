{
    "name": "angstrom/pandora-sms",
    "description": "A PHP client for sending SMS via Pandora SMS API",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Robinson Okello",
            "email": "okellorobinson@aim.com"
        }
    ],
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Angstrom\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Angstrom\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.0"
    },
    "repositories": {
        "packagist.org": false,
        "private-packagist": {
            "type": "composer",
            "url": "https://packagist.org/packages/angstrom/pandora-sms"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "11.5.x-dev",
        "mockery/mockery": "2.0.x-dev"
    }
}
